
{
  "expo": {
    "name": "Bitcoin Bluetooth Wallet",
    "slug": "bitcoin-bluetooth-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/natively-dark.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/natively-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bitcoinwallet.bluetoothwallet",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "Este app usa Bluetooth para transações Bitcoin seguras entre dispositivos próximos.",
        "NSBluetoothPeripheralUsageDescription": "Este app usa Bluetooth para transações Bitcoin seguras entre dispositivos próximos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/natively-dark.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.bitcoinwallet.bluetoothwallet",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_ADVERTISE"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      [
        "react-native-bluetooth-classic",
        {
          "peripheralUsageDescription": "Este app usa Bluetooth para transações Bitcoin seguras entre dispositivos próximos.",
          "alwaysUsageDescription": "Este app usa Bluetooth para transações Bitcoin seguras entre dispositivos próximos.",
          "protocols": ["com.bitcoinwallet.protocol"]
        }
      ]
    ],
    "scheme": "bitcoin-bluetooth-wallet",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bitcoin-bluetooth-wallet"
      }
    }
  }
}
